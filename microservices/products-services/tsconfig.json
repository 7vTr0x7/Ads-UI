{
  "compilerOptions": {
    "target": "ES2020", // Modern Node target
    "module": "CommonJS", // Node module system
    "lib": ["ES2020"], // JS features for target
    "outDir": "./dist", // Build output (optional)
    "rootDir": "./src", // Source root folder
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // For importing commonjs modules correctly
    "skipLibCheck": true, // Skip type checks for libs (speed up)
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true // Enable source maps for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
